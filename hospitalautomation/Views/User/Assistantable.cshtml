@{
    ViewData["Title"] = "Assistantable";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospitalautomation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            max-width: 90%;
            margin: 0 auto;
            margin-top: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 2px solid #000;
        }

        .table-title {
            background: linear-gradient(to right, #ff9a9e, #fad0c4);
            color: #3b3b3b;
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            border-bottom: 2px solid #000;
        }

        .table {
            margin: 0;
            border-collapse: collapse;
            width: 100%;
        }

        .table th {
            background-color: #f1f1f1;
            color: #3b3b3b;
            font-weight: bold;
            text-align: center;
            padding: 10px;
        }

        .table td, .table th {
            border: 2px solid #000;
            text-align: center;
            padding: 10px;
            vertical-align: middle;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #ffecec;
        }

        .table tbody tr:nth-child(even) {
            background-color: #fdf5f5;
        }

        .table-hover tbody tr:hover {
            background-color: #f7d7d7;
        }

        .details-icon {
            font-size: 18px;
            color: #007bff;
            cursor: pointer;
        }

        .details-icon:hover {
            color: #0056b3;
        }

        .modal-header {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>

<div class="table-container">
    <div class="table-title">ASİSTANLAR</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            <!-- Örnek Asistan Verileri -->
            <tr>
                <td>Melisa</td>
                <td>Simsek</td>
                <td>
                    <span class="details-icon" data-bs-toggle="modal" data-bs-target="#assistantModal" onclick="openModal('Melisa', 'Simsek', 'melisa@example.com', '1234 Example St.', '555-1234')">
                        <i class="fas fa-eye"></i>
                    </span>
                </td>
            </tr>
            <tr>
                <td>Ahmet</td>
                <td>Yılmaz</td>
                <td>
                    <span class="details-icon" data-bs-toggle="modal" data-bs-target="#assistantModal" onclick="openModal('Ahmet', 'Yılmaz', 'ahmet@example.com', '5678 Example St.', '555-5678')">
                        <i class="fas fa-eye"></i>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="assistantModal" tabindex="-1" aria-labelledby="assistantModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assistantModalLabel">Asistan Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>İsim:</strong> <span id="assistantName"></span></p>
                <p><strong>Soyisim:</strong> <span id="assistantSurname"></span></p>
                <p><strong>Email:</strong> <span id="assistantEmail"></span></p>
                <p><strong>Adres:</strong> <span id="assistantAddress"></span></p>
                <p><strong>Telefon:</strong> <span id="assistantPhone"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Modal'ı açmak için fonksiyon
    function openModal(name, surname, email, address, phone) {
        document.getElementById('assistantName').textContent = name;
        document.getElementById('assistantSurname').textContent = surname;
        document.getElementById('assistantEmail').textContent = email;
        document.getElementById('assistantAddress').textContent = address;
        document.getElementById('assistantPhone').textContent = phone;
    }
</script>

</body>
</html>