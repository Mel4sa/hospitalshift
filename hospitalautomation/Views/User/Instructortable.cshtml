@{
    ViewData["Title"] = "Instructortable";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospitalautomation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Arka plan görselini ekleme */
     .modal-header {
            background-color: #0072ff;
            color: white;
        }

        /* Detay Yazısının Konumu */
        .details-text-container {
            text-align: center; /* Yazının ortalanması */
            padding-right: 0;
        }

        /* Detaylar için Göz İkonu */
        .details-icon {
            font-size: 18px;
            color: #0072ff;
            cursor: pointer;
        }

        .details-icon:hover {
            color: #0056b3;
        }

        /* Tablo Başlık ve Arka Plan Rengi */
        .table th {
            background-color: #f1f1f1; /* Soft ve modern gri ton */
            color: #333; /* Başlık rengi */
        }
h2 {
    color: white; /* Yazıyı siyah yap */
}

        /* Tabloyu küçültmek için genel ayar */
        .table-responsive {
            max-width: 90%;
            margin: 0 auto;
        }

        /* İşlem sütununun genişliğini küçültmek */
        .table th, .table td {
            text-align: center;
        }

        .table .actions-column {
            width: 150px; /* İşlem sütununun genişliğini küçült */
        }

        /* Tablo çizgilerini siyah yapmak ve kalınlaştırmak */
        .table, .table th, .table td {
            border: 2px solid #000; /* Kalın siyah çizgiler */
        }

        /* Satırların arka planını beyaz yapmak */
        .table tbody tr {
            background-color: white; /* Satır arka planını beyaz yap */
        }

        /* Satır hover efekti */
        .table-hover tbody tr:hover {
            background-color: #f7f7f7; /* Hover arka plan rengini yumuşatmak */
        }

        /* Tablonun yazı tipi ve genel düzen */
        .table td {
            font-size: 14px;
            vertical-align: middle;
        }

        /* Modern görünümlü başlıklar */
        .table th {
            background: linear-gradient(to right, #b3cde0, #e1f7f9);
            color: #3b3b3b;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <h2 class="text-center mb-4">Öğretim Üyeleri </h2>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow-sm">
            <thead>
                <tr>
                    <th scope="col">İsim</th>
                    <th scope="col">Soyisim</th>

                    <th scope="col" class="actions-column">Detay</th>
                </tr>
            </thead>
            <tbody>
                <!-- Örnek Öğretim Üyesi Verileri -->
                <tr>
                    <td>Ahmet</td>
                    <td>Kaya</td>

                    <td class="details-text-container">
                        <span class="details-icon" data-bs-toggle="modal" data-bs-target="#professorModal" 
                              onclick="openModal('Ahmet', 'Kaya', 'ahmet.kaya@example.com', 'Bilgisayar Mühendisliği', '555-9876')">
                            <i class="fas fa-eye"></i>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Elif</td>
                    <td>Şahin</td>

                    <td class="details-text-container">
                        <span class="details-icon" data-bs-toggle="modal" data-bs-target="#professorModal" 
                              onclick="openModal('Elif', 'Şahin', 'elif.sahin@example.com', 'Elektrik-Elektronik Mühendisliği', '555-1234')">
                            <i class="fas fa-eye"></i>
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="professorModal" tabindex="-1" aria-labelledby="professorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="professorModalLabel">Öğretim Üyesi Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>İsim:</strong> <span id="professorName"></span></p>
                <p><strong>Soyisim:</strong> <span id="professorSurname"></span></p>
                <p><strong>Email:</strong> <span id="professorEmail"></span></p>
                <p><strong>Bölüm:</strong> <span id="professorDepartment"></span></p>
                <p><strong>Telefon:</strong> <span id="professorPhone"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Modal'ı açmak için fonksiyon
    function openModal(name, surname, email, department, phone) {
        document.getElementById('professorName').textContent = name;
        document.getElementById('professorSurname').textContent = surname;
        document.getElementById('professorEmail').textContent = email;
        document.getElementById('professorDepartment').textContent = department;
        document.getElementById('professorPhone').textContent = phone;
    }
</script>

</body>
</html>