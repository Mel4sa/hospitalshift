@{
    ViewData["Title"] = "Instructortable";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospitalautomation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            max-width: 90%;
            margin: 0 auto;
            margin-top: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 2px solid #000;
        }

        /* Başlık Arka Planı */
        .table-title {
            background: blue; /* Mavi gradyan */
            color: #ffffff;
            padding: 15px;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            border-bottom: 2px solid #000;
        }

        .table {
            margin: 0;
            border-collapse: collapse;
            width: 100%;
        }

        /* Tablo Başlıkları */
        .table th {
            background-color: #4facfe; /* Açık mavi */
            color: white;
            font-weight: bold;
            text-align: center;
            padding: 10px;
        }

        /* Satırların Arka Planı */
        .table tbody tr:nth-child(odd) {
            background-color: #e6f7ff; /* Açık mavi tonu */
        }

        .table tbody tr:nth-child(even) {
            background-color: #ffffff; /* Beyaz */
        }

        /* Hover Efekti */
        .table-hover tbody tr:hover {
            background-color: #b3e5fc; /* Daha koyu mavi hover efekti */
        }

        .table td, .table th {
            border: 2px solid #000;
            text-align: center;
            padding: 10px;
            vertical-align: middle;
        }

        .details-icon {
            font-size: 18px;
            color: #007bff;
            cursor: pointer;
        }

        .details-icon:hover {
            color: #0056b3;
        }

        .modal-header {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>

<div class="table-container">
    <div class="table-title">ÖĞRETİM ÜYELERİ</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            <!-- Örnek Öğretim Üyesi Verileri -->
            <tr>
                <td>Ahmet</td>
                <td>Kaya</td>
                <td>
                    <span class="details-icon" data-bs-toggle="modal" data-bs-target="#professorModal" 
                          onclick="openModal('Ahmet', 'Kaya', 'ahmet.kaya@example.com', 'Bilgisayar Mühendisliği', '555-9876')">
                        <i class="fas fa-eye"></i>
                    </span>
                </td>
            </tr>
            <tr>
                <td>Elif</td>
                <td>Şahin</td>
                <td>
                    <span class="details-icon" data-bs-toggle="modal" data-bs-target="#professorModal" 
                          onclick="openModal('Elif', 'Şahin', 'elif.sahin@example.com', 'Elektrik-Elektronik Mühendisliği', '555-1234')">
                        <i class="fas fa-eye"></i>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="professorModal" tabindex="-1" aria-labelledby="professorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="professorModalLabel">Öğretim Üyesi Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>İsim:</strong> <span id="professorName"></span></p>
                <p><strong>Soyisim:</strong> <span id="professorSurname"></span></p>
                <p><strong>Email:</strong> <span id="professorEmail"></span></p>
                <p><strong>Bölüm:</strong> <span id="professorDepartment"></span></p>
                <p><strong>Telefon:</strong> <span id="professorPhone"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Modal'ı açmak için fonksiyon
    function openModal(name, surname, email, department, phone) {
        document.getElementById('professorName').textContent = name;
        document.getElementById('professorSurname').textContent = surname;
        document.getElementById('professorEmail').textContent = email;
        document.getElementById('professorDepartment').textContent = department;
        document.getElementById('professorPhone').textContent = phone;
    }
</script>

</body>
</html>