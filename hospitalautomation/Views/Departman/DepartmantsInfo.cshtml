@{
    ViewData["Title"] = "DepartmantsInfo";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
    <div class="row row-cols-1 row-cols-md-3 g-4 w-100">
        <style>
            .card {
                border-radius: 15px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 350px; /* Kartların genişliği artırıldı */
            }

            .card-icon {
                font-size: 4rem;
            }

            .card-title {
                font-weight: bold;
                color: #007bff;
            }

            .card:nth-child(1) .card-title {
                color: #e91e63;
            }

            .card:nth-child(2) .card-title {
                color: #3f51b5;
            }

            .card:nth-child(3) .card-title {
                color: #4caf50;
            }

            .form-group label {
                font-weight: bold;
            }

            .form-control {
                border-radius: 10px;
                border: 1px solid #ddd;
            }
        </style>

        <!-- Kart 1 -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-hospital-fill card-icon mb-3" style="color: inherit;"></i>
                    <h5 class="card-title">Çocuk Acil</h5>
                    <form>
                        <div class="form-group mb-3">
                            <label for="emptyBeds1">Boş Yatak Sayısı</label>
                            <input type="text" class="form-control" id="emptyBeds1">
                        </div>
                        <div class="form-group mb-3">
                            <label for="patientsCount1">Hasta Sayısı</label>
                            <input type="text" class="form-control" id="patientsCount1">
                        </div>
                        <div class="form-group mb-3">
                            <label for="workingHours1">Açık Olduğu Aralığı</label>
                            <input type="text" class="form-control" id="workingHours1">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Kart 2 -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-heart-pulse-fill card-icon mb-3" style="color: inherit;"></i>
                    <h5 class="card-title">Çocuk Yoğun Bakım</h5>
                    <form>
                        <div class="form-group mb-3">
                            <label for="emptyBeds2">Boş Yatak Sayısı</label>
                            <input type="text" class="form-control" id="emptyBeds2">
                        </div>
                        <div class="form-group mb-3">
                            <label for="patientsCount2">Hasta Sayısı</label>
                            <input type="text" class="form-control" id="patientsCount2">
                        </div>
                        <div class="form-group mb-3">
                            <label for="workingHours2">Açık Olduğu Saat Aralığı</label>
                            <input type="text" class="form-control" id="workingHours2">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Kart 3 -->
        <div class="col">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill card-icon mb-3" style="color: inherit;"></i>
                    <h5 class="card-title">Çocuk Hematolojisi ve Onkolojisi</h5>
                    <form>
                        <div class="form-group mb-3">
                            <label for="emptyBeds3">Boş Yatak Sayısı</label>
                            <input type="text" class="form-control" id="emptyBeds3">
                        </div>
                        <div class="form-group mb-3">
                            <label for="patientsCount3">Hasta Sayısı</label>
                            <input type="text" class="form-control" id="patientsCount3">
                        </div>
                        <div class="form-group mb-3">
                            <label for="workingHours3">Açık Olduğu Aralığı</label>
                            <input type="text" class="form-control" id="workingHours3">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>