<script>
    function openModal(modalId, departmentName) {
    const modal = document.getElementById(modalId);


    fetch('/Departman/get-department?name=' + encodeURIComponent(departmentName))
    .then(response => response.json())
    .then(data => {

        const patientCountInput = modal.querySelector('[name="patientsCount"]');
        const emptyBedsInput = modal.querySelector('[name="emptyBeds"]');
        const startTimeInput = modal.querySelector('[name="workingHoursStart"]');
        const endTimeInput = modal.querySelector('[name="workingHoursEnd"]');

        if (Object.keys(data).length === 0) {
  
            patientCountInput.value = '';
            emptyBedsInput.value = '';
            startTimeInput.value = '';
            endTimeInput.value = '';
        } else {
         
            patientCountInput.value = data.patientCount;
            emptyBedsInput.value = data.emptybedCount;
            startTimeInput.value = data.startTime; 
            endTimeInput.value = data.endTime;
        }

        // Modal'ı göster
        const bootstrapModal = new bootstrap.Modal(modal);
        bootstrapModal.show();
    })
    .catch(error => {
        console.error(error);
        alert("Bir hata oluştu veriyi çekerken.");
    });
}

function saveDepartment(modalId) {
    const modal = document.getElementById(modalId);
    const name = modal.querySelector('.modal-title').innerText; 
    const patientCount = modal.querySelector(`[name="patientsCount"]`).value;
    const emptyBedCount = modal.querySelector(`[name="emptyBeds"]`).value;
    const startTime = modal.querySelector(`[name="workingHoursStart"]`).value;
    const endTime = modal.querySelector(`[name="workingHoursEnd"]`).value;

    const department = {
    
        name: name.trim(),
        patientCount: parseInt(patientCount),
        emptybedCount: parseInt(emptyBedCount),
        startTime: startTime,
        endTime: endTime
    };

    fetch('/Departman/create-or-update', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(department),
    })
    .then(response => response.json())
    .then(data => {
        if (data.error) {
            alert("Hata: " + data.error);
        } else if (data.success) {
            alert(data.success);
            location.reload();
        }
    })
    .catch((error) => {
        console.error(error);
        alert("Bir hata oluştu.");
    });
}

</script>