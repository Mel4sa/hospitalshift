    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #6a1b9a;
        box-shadow: 0 0 5px rgba(106, 27, 154, 0.5);
    }

    .btn-success {
        background-color: #4caf50;
        border: none;
        border-radius: 25px;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background-color: #45a049;
