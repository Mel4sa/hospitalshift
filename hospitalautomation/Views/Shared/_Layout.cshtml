<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospitalautomation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Navbar arka plan rengini beyaz yap */
        .navbar {
            background-color: white; /* Beyaz arka plan */
        }

        /* Navbar yazı rengini siyah yap */
        .navbar-nav .nav-link {
            color: black !important; /* Yazı rengi siyah */
            font-size: 16px;
        }

        /* Navbar linkleri üzerine gelindiğinde rengi değiştirme */
        .navbar-nav .nav-link:hover {
            background-color: #f1f1f1; /* Yumuşak gri hover efekti */
            color: black; /* Hoverda da siyah renk */
            border-radius: 5px;
        }

        /* Avatar için stiller */
        .avatar-container {
            position: relative;
            display: inline-block;
        }

        .avatar-container .logout-text {
            display: none;
            position: absolute;
            top: 150%;
            right: 0;
            background-color: #0072ff;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            white-space: nowrap;
        }

        .avatar-container.show-logout .logout-text {
            display: block;
        }

        /* Navbar logo ve metin stilleri */
        .navbar-brand {
            display: flex;
            align-items: center;
            position: relative;
        }

        .navbar-brand span {
            margin-left: 10px;
        }

        /* Arka plan görselini ekleme */
        body {
            background-image: url('/images/homeback.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: black; /* Yazıyı siyah yapalım */
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Sol Taraf: Logo ve Metin -->
        <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="color: black; display: flex; align-items: center;">
            <img src="/images/4082065_healthcare_hospital_medical_icon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            <span>PediNöbetTakip</span>
        </a>

        <!-- Sağ Taraf: Navbar Menüsü -->
        <ul class="navbar-nav d-flex align-items-center">
           <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Assistantable", "User")">Asistanlar</a>
</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Instructortable","User")">Öğretim Üyeleri</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("DepartmantsInfo","Departman")">Bölümler</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("ShiftInfo", "Shift")">Nöbet Takvimi</a>
            </li>
           <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Index", "Interview")">Randevular</a>
</li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("EmergencyInfo","Emergency")">Acil Durum Haberleri</a>
            </li>
        </ul>

        <!-- Sağ Taraf: Avatar İkonu -->
        <div class="avatar-container">
            <a href="#" onclick="toggleLogoutText(event)">
                <img src="/images/4092564_profile_about_mobile ui_user_icon.png" alt="Avatar" width="30" height="30" class="rounded-circle" style="background-color: white; padding: 5px; margin-left: 0px;">
            </a>
            <div class="logout-text" style="background-color: black;">
                <!-- Çıkış Yap linkine yönlendirme -->
                <a href="/login" style="background-color: black; color:white; text-decoration: none; padding: 5px 10px; border-radius: 5px;">
                    Çıkış Yap
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    // Tıklama ile "Çıkış Yap" metnini göster/gizle
    function toggleLogoutText(event) {
        event.preventDefault();
        const container = event.currentTarget.closest('.avatar-container');
        container.classList.toggle('show-logout');
    }
</script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
