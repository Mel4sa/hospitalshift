<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hospitalautomation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Sağdaki avatar için stil */
        .avatar-container {
            position: relative;
            display: inline-block;
        }

        .avatar-container .logout-text {
            display: none; /* İlk başta gizli */
            position: absolute;
            top: 150%; /* Daha aşağıda görünmesi için %150 yapıldı */
            right: 0;
            background-color: #0072ff;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
            white-space: nowrap;
        }

        .avatar-container.show-logout .logout-text {
            display: block; /* Tıklanınca görünür yap */
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            position: relative;
        }

        .navbar-brand span {
            margin-left: 10px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-size: 16px;
        }

        .navbar-nav .nav-link:hover {
            background-color: #0056b3;
            border-radius: 5px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg" style="background: linear-gradient(to left, #0072ff, #00c6ff);">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Sol Taraf: Logo ve Metin -->
        <a class="navbar-brand" href="#" style="color: white; display: flex; align-items: center;">
            <img src="/images/4082065_healthcare_hospital_medical_icon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            <span>PediNöbetTakip</span>
        </a>

        <!-- Sağ Taraf: Navbar Menüsü -->
        <ul class="navbar-nav d-flex align-items-center">
            <li class="nav-item">
                <a class="nav-link" href="#">Asistanlar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Öğretim Üyeleri</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Bölümler</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Nöbet Takvimi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Randevular</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Acil Durum Haberleri</a>
            </li>
        </ul>

        <!-- Sağ Taraf: Avatar İkonu -->
        <div class="avatar-container">
            <a href="#" onclick="toggleLogoutText(event)">
                <img src="/images/4092564_profile_about_mobile ui_user_icon.png" alt="Avatar" width="30" height="30" class="rounded-circle" style="background-color: white; padding: 5px; margin-left: 0px;">
            </a>
            <div class="logout-text" style="background-color: linear-gradient(to left, #00c6ff, #003366);">
                <!-- Çıkış Yap linkine yönlendirme -->
                <a href="/login" style="background-color: linear-gradient(to left, #003366, #00c6ff); color:white; text-decoration: none; padding: 5px 10px; border-radius: 5px;">
                    Çıkış Yap
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    // Tıklama ile "Çıkış Yap" metnini göster/gizle
    function toggleLogoutText(event) {
        event.preventDefault();
        const container = event.currentTarget.closest('.avatar-container');
        container.classList.toggle('show-logout');
    }
</script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>