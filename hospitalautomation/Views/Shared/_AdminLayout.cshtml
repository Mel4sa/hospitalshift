<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Paneli</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">       
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
       body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0; 
}
        .sidebar {
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    width: 250px; 
    background: linear-gradient(to bottom, #333, #555);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    z-index: 1000; 
}

        .sidebar .header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
        .sidebar .header h4 {
            margin: 0;
            color: #fff; 
            letter-spacing: 2px;
            font-size: 18px;
        }
       .sidebar a {
    color: #ccc;
    text-decoration: none;
    padding: 15px 20px;
    display: block;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    font-size: 15px;
}
       .sidebar a:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    padding-left: 25px;
}
    .logout-btn {
    margin: 20px 15px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 5px;
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    padding: 8px 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
    margin-top: auto;
}
       .logout-btn img {
    margin-left: 5px;
}
        .logout-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
   .main-content {
    margin-left: 250px; 
    padding: 20px;
    background-color: #fff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: auto; 
    position: relative; 
    min-height: 100vh; 
}

        h1 {
            color: #333; 
        }
        p {
            color: #666; 
        }
    </style>
</head>
<body>
 
    <div class="sidebar">
        <div>


 <a href="@Url.Action("Index", "AdminHome")" style="text-decoration: none; color: white;">
        <h4 style="text-decoration: none; color: white; display: block; text-align: center; padding-left: 15px;">Ana Sayfa</h4>
    </a>
            <a href="@Url.Action("Index", "User")">Kullanıcı Yönetimi</a>
            <a href="@Url.Action("Index", "Departman")">Bölüm Yönetimi</a>
            <a href="@Url.Action("Index", "Shift")"> Nöbet Yönetimi</a>
          <a href="@Url.Action("Interviewtable", "Interview")">Randevu Yönetimi</a>
          <a href="@Url.Action("Index", "Emergency")">Acil Durumlar</a>
        </div>
     
        <a href="@Url.Action("Index", "Login")" class="logout-btn">
            Çıkış
            <img src="/images/box-arrow-right.svg" alt="Logout Icon" width="20" height="20">
        </a>
    </div>

    
    <div class="main-content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
   
</body>
</html>