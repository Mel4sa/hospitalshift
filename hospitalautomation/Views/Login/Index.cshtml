@{
    Layout=null;
}
@model hospitalautomation.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
 

<div style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center; height: 100vh; display: flex; justify-content: center; align-items: center;">

    <!-- Login Formu -->
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 15px; background: rgba(255, 255, 255, 0.85);">
        <div class="card-body">
            <!-- Başlık -->
            <h3 class="card-title text-center mb-4" style="font-weight: bold; color: #4e73df;">GİRİŞ</h3>
            
            <!-- Form Başlangıcı -->
            <form method="post" asp-action="Index">
                
                <!-- E-posta Alanı -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email </label>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="Mailinizi giriniz" required />
                </div>

                <!-- Şifre Alanı -->
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Şifrenizi giriniz" required />
                </div>

                <!-- Login Butonu -->
                <button type="submit" class="btn btn-primary w-100" style="border-radius: 25px; padding: 12px; font-weight: bold;">Giriş</button>
            </form>

            <!-- Bilgilendirme Mesajı -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-3">
                    @ViewBag.Message
                </div>
            }

            <!-- Şifremi Unuttum Linki -->
            <div class="text-center mt-3">
                <a href="#" style="font-size: 14px; color: #4e73df;">Şifremi Unuttum</a>
            </div>
        </div>
    </div>

</div>