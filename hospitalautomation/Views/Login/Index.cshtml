@{
    Layout = null;
}
@model hospitalautomation.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div style="background-image: url('/images/background.jpg'); background-size: cover; background-position: left center; height: 100vh; display: flex; justify-content: flex-start; align-items: center; padding-left: 10%; padding-right: 10%;"> <!-- Formu sola kaydırmak için padding-left eklendi -->
    <!-- Login Formu -->
    <div class="card p-4" style="width: 100%; max-width: 400px; border: none; border-radius: 20px; background: rgba(255, 255, 255, 0.7);">
        <div class="card-body">
            <!-- Başlık -->

            
            <!-- Form Başlangıcı -->
            <form method="post" asp-action="Index">

                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                <!-- E-posta Alanı -->
                <div class="mb-4">
                    <label for="email" class="form-label" style="color: transparent; background: linear-gradient(to left, #00c6ff, #0072ff); -webkit-background-clip: text; background-clip: text;">Email</label>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="Mailinizi giriniz" required 
                           style="border-radius: 20px; padding: 12px; border: none;" />
                </div>

                <!-- Şifre Alanı -->
                <div class="mb-4" style="position: relative;">
                    <label for="password" class="form-label" style="color: transparent; background: linear-gradient(to left, #00c6ff, #0072ff); -webkit-background-clip: text; background-clip: text;">Şifre</label>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Şifrenizi giriniz" required 
                           style="border-radius: 20px; padding: 12px; border: none;" />
                    <!-- Şifremi Unuttum -->
                    <a href="#" style="position: absolute; right: 0; bottom: -25px; font-size: 14px; color: linear-gradient(to left, #00c6ff, #0072ff);">Şifremi Unuttum</a>
                </div>

                <!-- Login Butonu -->
                <button type="submit" class="btn btn-primary w-100 mt-4" style="border-radius: 25px; padding: 14px; font-weight: bold; background-color: #2575fc; border: none;">Giriş</button>
            </form>

            <!-- Bilgilendirme Mesajı -->
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-light mt-4">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>