@model List<hospitalautomation.Models.Dtos.UserDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h2 class="text-primary">Nöbetler</h2>
        <!-- Nöbet Ekle Butonu -->
        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addShiftModal">Nöbet Ekle</button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Asistan İsmi</th>
                    <th scope="col">Bölüm</th>
                    <th scope="col">Nöbet Tarihi</th>
                    <th scope="col">Başlangıç Saati</th>
                    <th scope="col">Bitiş Saati</th>
                    <th scope="col">İşlemler</th> <!-- Sil ve Güncelle Butonları için Sütun -->
                </tr>
            </thead>
            <tbody>
                <!-- Örnek Satır -->
                <tr>
                    <td>Ahmet Yılmaz</td>
                    <td>Genel Cerrahi</td>
                    <td>2024-12-15</td>
                    <td>09:00</td>
                    <td>17:00</td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
                <!-- Diğer satırlar buraya eklenecek -->
            </tbody>
        </table>
    </div>
</div>

<!-- Nöbet Ekle Modal -->
<div class="modal fade" id="addShiftModal" tabindex="-1" aria-labelledby="addShiftModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(45deg, #4e73df, #1c4b8c);">
                <h5 class="modal-title" id="addShiftModalLabel" style="color: white;">Nöbet Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <!-- Asistan Seçimi -->
                    <div class="mb-3">
                        <label for="assistant" class="form-label" style="color: #4e73df;">Asistan Seçimi</label>
                        <select class="form-select" id="assistant" required>
                            <option selected disabled>Asistan Seçin</option>
                            <option value="1">Ahmet Yılmaz</option>
                            <option value="2">Mehmet Kaya</option>
                            <option value="3">Fatma Demir</option>
                        </select>
                    </div>

                    <!-- Bölüm Seçimi -->
                    <div class="mb-3">
                        <label for="department" class="form-label" style="color: #4e73df;">Bölüm Seçimi</label>
                        <select class="form-select" id="department" required>
                            <option selected disabled>Bölüm Seçin</option>
                            <option value="1">Genel Cerrahi</option>
                            <option value="2">Kardiyoloji</option>
                            <option value="3">Dahiliye</option>
                        </select>
                    </div>

                    <!-- Nöbet Tarihi -->
                    <div class="mb-3">
                        <label for="shiftDate" class="form-label" style="color: #4e73df;">Nöbet Tarihi</label>
                        <input type="date" class="form-control" id="shiftDate" required>
                    </div>

                    <!-- Başlangıç Saati -->
                    <div class="mb-3">
                        <label for="startTime" class="form-label" style="color: #4e73df;">Başlangıç Saati</label>
                        <input type="time" class="form-control" id="startTime" required>
                    </div>

                    <!-- Bitiş Saati -->
                    <div class="mb-3">
                        <label for="endTime" class="form-label" style="color: #4e73df;">Bitiş Saati</label>
                        <input type="time" class="form-control" id="endTime" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </div>
    </div>
</div>