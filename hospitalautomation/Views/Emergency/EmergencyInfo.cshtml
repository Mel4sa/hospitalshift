@{
    ViewData["Title"] = "EmergencyInfo";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 50px;
        max-width: 1000px;
    }

    .card {
        border-radius: 10px;
        border: none; /* Kartın dış çizgilerini kaldır */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
    }

    .card-header {
        background-color: #dc3545; /* Kırmızı arka plan */
        color: white;
        font-weight: bold;
        font-size: 1.25rem;
        text-align: center;
        border-radius: 10px 10px 0 0;
        border: none; /* Beyaz çizgileri kaldır */
    }

    .table {
        margin-bottom: 0;
        border-collapse: collapse; /* Çizgilerin çakışmasını önler */
    }

    .table th {
        background-color: #dc3545; /* Kırmızı arka plan */
        color: white;
        text-align: center;
        font-weight: bold;
        border: none; /* Kenar çizgilerini kaldır */
    }

    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table tbody tr:nth-child(odd) {
        background-color: #f9d6d6; /* Hafif kırmızı */
    }

    .table tbody tr:nth-child(even) {
        background-color: #fdf1f1; /* Daha açık kırmızı */
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            Acil Durum Bilgileri
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturulma Saati</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Ahmet Yılmaz</td>
                        <td>Yangın Alarmı</td>
                        <td>Bina giriş katında duman tespit edildi.</td>
                        <td>15 Aralık 2024</td>
                        <td>14:30</td>
                    </tr>
                    <tr>
                        <td>Fatma Aksoy</td>
                        <td>Deprem Bildirimi</td>
                        <td>Hafif şiddetli sarsıntılar hissedildi.</td>
                        <td>14 Aralık 2024</td>
                        <td>12:45</td>
                    </tr>
                    <tr>
                        <td>Mehmet Can</td>
                        <td>Gaz Kaçağı</td>
                        <td>B blokta gaz kaçağı uyarısı alındı.</td>
                        <td>13 Aralık 2024</td>
                        <td>09:15</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>