@model List<hospitalautomation.Models.Dtos.UserDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Paneli";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container-fluid">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <!-- Hoşgeldiniz Mesajı -->
        <div class="col-12 text-center mb-5">
            <i class="bi bi-person-circle" style="font-size: 100px; color: #4b8fe2;"></i>
            <h1 style="color: #4b8fe2; font-weight: bold;">Hoşgeldiniz!</h1>
            <p class="text-muted" style="font-size: 18px;">
                Yönetim panelinde işlemlerinizi hızlı ve kolay bir şekilde gerçekleştirebilirsiniz.
            </p>
        </div>

        <!-- İstatistikler ve Yönetim Linkleri -->
        <div class="col-10">
            <div class="row text-center">
                <div class="col-md-4 d-flex">
                    <div class="p-4 shadow-sm rounded flex-grow-1" style="background-color: #f9f9f9;">
                        <i class="bi bi-people-fill" style="font-size: 50px; color: #7a5baf;"></i>
                        <h5 class="mt-3">20+ Kullanıcı</h5>
                        <p class="text-muted">Kullanıcıları kolayca yönetin.</p>
                        <a href="@Url.Action("Index", "User")" class="text-decoration-none text-primary">Kullanıcı Yönetimi</a>
                    </div>
                </div>
                <div class="col-md-4 d-flex">
                    <div class="p-4 shadow-sm rounded flex-grow-1" style="background-color: #f9f9f9;">
                        <i class="bi bi-building" style="font-size: 50px; color: #7a5baf;"></i>
                        <h5 class="mt-3">3 Bölüm</h5>
                        <p class="text-muted">Bölüm bilgilerini yönetin.</p>
                        <a href="@Url.Action("Index", "Departman")" class="text-decoration-none text-primary">Bölüm Yönetimi</a>
                    </div>
                </div>
                <!-- Nöbet Yönetimi Kartı Boyutlandırma -->
                <div class="col-md-4 d-flex">
                    <div class="p-4 shadow-sm rounded flex-grow-1" style="background-color: #f9f9f9;">
                        <i class="bi bi-calendar-check" style="font-size: 50px; color: #7a5baf;"></i>
                        <h5 class="mt-3"> Nöbet</h5>
                        <p class="text-muted">Nöbet planlamasını kolayca yönetin.</p>
                        <a href="@Url.Action("Index", "Shift")" class="text-decoration-none text-primary">Nöbet Yönetimi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS Düzenlemeleri -->
<style>
    /* Ortak Kart Stili */
    .p-4 {
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Kart içeriğini düzenler */
    }

    .shadow-sm {
        height: 100%; /* Kartların eşit yükseklikte olmasını sağlar */
    }

    /* Flexbox ile Eşit Yükseklik Sağlamak */
    .d-flex {
        display: flex;
    }

    .flex-grow-1 {
        flex-grow: 1;
    }
</style>