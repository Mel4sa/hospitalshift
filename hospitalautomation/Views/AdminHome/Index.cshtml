@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminHome</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQmPoF8UFNSp2TVNUH+RBY9uuAMt4E3jDxuG1z3L2ozm80LUHa1LjwFJG" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4; /* Hafif gri arka plan */
        }
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background: linear-gradient(to bottom, #333, #555); /* Siyah ve koyu gri geçiş */
            color: white;
            display: flex;
            flex-direction: column; /* Butonu alta sabitlemek için */
            justify-content: flex-start; /* Başlangıçta üstte, sonrasında çıkış butonu için flex-end kullanacağız */
        }
        .sidebar .header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
        .sidebar .header h4 {
            margin: 0;
            color: #fff; 
            letter-spacing: 2px;
            font-size: 18px;
        }
        .sidebar a {
            color: #ccc; 
            text-decoration: none;
            padding: 15px 20px;
            display: block;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* Alt çizgi */
            transition: all 0.3s ease;
            font-size: 15px;
        }
        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.1); /* Hafif beyaz parlama */
            color: white; /* Yazılar beyaz */
            padding-left: 25px; /* Hover'da içeriği sağa kaydırma efekti */
        }
        .logout-btn {
            margin: 20px 15px; /* Az sola kaydırma */
            display: flex;
            align-items: center;
            justify-content: flex-end; /* Yazı ve ikonu sağa yasla */
            gap: 5px; /* Yazı ile ikon arasında boşluk */
            color: #fff;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            padding: 8px 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
            margin-top: auto; /* Sidebar'ın altına sabitlemek için */
        }
        .logout-btn img {
            margin-left: 5px; /* İkonu yazının sağına yerleştir */
        }
        .logout-btn:hover {
            background-color: rgba(255, 255, 255, 0.1); /* Hover'da hafif parlama */
            color: #fff;
        }
        .main-content {
            margin-left: 250px; /* Sidebar genişliği kadar boşluk bırak */
            padding: 20px;
            background-color: #fff; /* Beyaz içerik arka planı */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
            border-radius: 10px;
            margin: 20px;
        }
        h1 {
            color: #333; /* Koyu gri başlık */
        }
        p {
            color: #666; /* Açık gri metin */
        }
    </style>
</head>
<body>
    <!-- Sol Dikey Navbar -->
    <div class="sidebar">
        <div>
            <div class="header">
                <h4>Admin Paneli</h4>
            </div>
            <a href="/adminhome/users">Kullanıcı Yönetimi</a>
            <a href="/adminhome/assistants">Asistan Yönetimi</a>
            <a href="/adminhome/doctors">Öğretim Üyesi Yönetimi</a>
            <a href="/adminhome/departments">Bölüm Yönetimi</a>
            <a href="/adminhome/schedule">Takvim ve Nöbetler</a>
            <a href="/adminhome/appointments">Randevu Yönetimi</a>
            <a href="/adminhome/emergency">Acil Durumlar</a>
        </div>
        <!-- Çıkış Butonu -->
        <a href="@Url.Action("LoginByAdmin", "Login")" class="logout-btn">
            Çıkış
            <img src="/images/box-arrow-right.svg" alt="Logout Icon" width="20" height="20">
        </a>
    </div>

    <!-- Ana İçerik -->
    <div class="main-content">
     
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+q2jgS9m9U3Gz4e8N0Bc9M3hux3Kn" crossorigin="anonymous"></script>
</body>
</html>